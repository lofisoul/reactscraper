<section class="content container">
  <h1>Saved Articles</h1>
  <ul class="list">
    {{#each Articles}}
    <li class="post">
      <div class="main row">

        <div class="post-info col-xs-8 col-sm-9">
          <h2>
            <a href="{{this.link}}">
              {{this.title}}
            </a>
          </h2>
          <iframe src="{{this.player}}"></iframe>
        </div>
        <div class="post-sidebar col-xs-4 col-sm-3">
          <div class="post-img" style="background-image:url({{this.img}})">
          </div>
          <div class="post-date">{{this.date}}</div>
          <button class="btn btn-info">Add a note!</button>
          <form class="remove-saved" action="/saved/{{this._id}}?_method=PUT" method="POST">
            <input type="hidden" name="saved" value="false">
            <button class="btn btn-warning" type="submit">Remove From Saved</button>
          </form>
        </div>
      <div class="comment">
        <div class="comment-window">
          <ul class="comment-list">
          {{# each }}
            <li class="comment-item" data-id="{{this.note._id}}">
            <form class="remove-note" action="/note/{{this._id}}?_method=PUT" method="POST">
              <input type="hidden" name="saved" value="false">
              <button class="btn btn-warning" type="submit">Remove From Saved</button>
            </form>
            {{this.note.body}}
            </li>
          {{/each}}
          </ul>
        </div>
        <h2>Create a note</h2>
        <form class="comment-form" action="/note" method="POST">
          <div class="form-group">

            <input type="text" id="name" name="name" class="form-control">
          </div>
          <div class="form-group">
            <label>Comment</label>
            <textarea id="body" name="body"></textarea>
          </div>
        </form>
      </div>
    </div>
    </li>
    {{/each}}
  </ul>
</section>
